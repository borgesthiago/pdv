{% extends 'base.html.twig' %}

{% block title %}Funcionario{% endblock %}

{% block body %}
 <div class="espaco">
    <h3>Listagem de Funcionários</h3>  
    <div class="direita">
        <a href="{{ path('funcionario_new') }}"><button type="button" class="ui primary button"><i class="fa fa-plus-circle" aria-hidden="true"></i> Novo</button></a>
    </div>
    <table class="ui celled table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Cpf</th>
                <th>Telefone</th>
                <th>Data Admissão</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for funcionario in funcionarios %}
            <tr>
                <td>{{ funcionario.id }}</td>
                <td>{{ funcionario.nome }}</td>
                <td>{{ funcionario.cpf }}</td>
                <td>{{ funcionario.telefone }}</td>
                <td>{{ funcionario.admissao|date("d/m/Y") }}</td>
                <td>                
                <div class="ui small basic icon buttons">
                    <a href="{{ path('funcionario_show', {'id': funcionario.id}) }}"><button class="ui button"><i class="file icon"></i></button></a>
                    <a href="{{ path('funcionario_edit', {'id': funcionario.id}) }}"><button class="ui button"><i class="edit icon"></i></button></a>
                    {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('funcionario_delete', {'id': funcionario.id}) }}"><button class="ui button"><i class="trash icon"></i></button></a>
                    {% endif %}
                </div>                   
                </td>
            </tr>
        {% else %}
                <td colspan="6">nenhum registro encontrado</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('assets/js/jquery.mask.min.js') }}"></script>
{% endblock %}